<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleActivity"
    android:background="@drawable/bghome">

    <TextView
        android:id="@+id/scheduleActivities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Activities and Tasks"
        android:textColor="#3F51B5"
        android:textColorHighlight="#2196F3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scheduleActivities2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/scheduleActivities"
        android:text="Add an Activity or Task"
        android:textColor="#3F51B5"
        android:textColorHighlight="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scheduleActivities2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Activity Title"
        android:textColorHint="#3F51B5"
        android:textAlignment="center"
        android:inputType="text"
        android:textSize="20sp"
        android:textColor="#3F51B5"/>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Date"
        android:textColorHint="#3F51B5"
        android:textAlignment="center"
        android:inputType="date"
        android:textSize="20sp"
        android:textColor="#3F51B5"/>

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Time"
        android:inputType="time"
        android:textSize="20sp"
        android:textColorHint="#3F51B5"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Location"
        android:inputType="text"
        android:textSize="20sp"
        android:textColorHint="#3F51B5"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_below="@id/editTextLocation"
        android:layout_centerHorizontal="true"
        android:hint="Description"
        android:textColor="#3F51B5"
        android:textColorHint="#3F51B5"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:id="@+id/AAAdd"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="600dp"
        android:layout_centerHorizontal="true"
        android:text="Add Activity" />


    <Button
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:id="@+id/AABack"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="675dp"
        android:layout_centerHorizontal="true"
        android:text="Back" />

</RelativeLayout>